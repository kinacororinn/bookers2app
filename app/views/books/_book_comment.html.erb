
<table>
 <% book_comments.each do |book_comment| %>
      <tr id="book_comment-<%= book_comment.id %>">

        <td><%= link_to user_path(book.user) do %>
          <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
          <%= book_comment.user.name %>
          <% end %>
        </td>
         <td>
          <%= book_comment.book_comment %>
         </td>
         <td><% if book_comment.user == current_user %>
             <%= link_to "destroy",book_comment_path(book_comment.id) , method: :delete, remote: true, class: "btn btn-sm btn-danger destroy_book_#{book_comment.id} " %>
             <% end %>
         </td>
      </tr>
  <% end %>

</table>

